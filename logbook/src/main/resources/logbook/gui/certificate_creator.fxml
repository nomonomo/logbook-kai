<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="logbook.internal.gui.CertificateCreatorController"
      styleClass="root" spacing="10" prefWidth="600" prefHeight="400">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Label text="サーバー証明書作成" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
      
      <!-- ルート証明書読み込み -->
      <CheckBox fx:id="useRootCertificate" text="既存のルート証明書を使用する" disable="true" />
      
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints minWidth="150.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
            <ColumnConstraints minWidth="100.0" />
            <ColumnConstraints minWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <!-- ルート証明書ファイル -->
            <Label text="ルート証明書ファイル:" GridPane.rowIndex="0" />
            <TextField fx:id="rootCertificatePath" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Button fx:id="rootCertificatePathRef" text="参照..." disable="true" onAction="#selectRootCertificate" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <Button fx:id="rootCertificateVerify" text="内容確認" disable="true" onAction="#verifyRootCertificate" GridPane.columnIndex="3" GridPane.rowIndex="0" />
            
            <!-- ルート証明書秘密鍵ファイル -->
            <Label text="ルート証明書秘密鍵:" GridPane.rowIndex="1" />
            <TextField fx:id="rootCertificateKeyPath" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="rootCertificateKeyPathRef" text="参照..." disable="true" onAction="#selectRootCertificateKey" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            
            <!-- ルート証明書秘密鍵パスワード -->
            <Label text="秘密鍵パスワード:" GridPane.rowIndex="2" />
            <TextField fx:id="rootCertificatePassword" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2" />
            
            <!-- Common Name (CN) -->
            <Label text="Common Name (CN):" GridPane.rowIndex="3" />
            <TextField fx:id="commonName" text="*.kancolle-server.com" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3" />
            
            <!-- Organization (O) -->
            <Label text="Organization (O):" GridPane.rowIndex="4" />
            <TextField fx:id="organization" text="Logbook" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="3" />
            
            <!-- 出力先ディレクトリ -->
            <Label text="出力先ディレクトリ:" GridPane.rowIndex="5" />
            <TextField fx:id="outputDirectory" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Button fx:id="outputDirRef" text="参照..." onAction="#selectOutputDirectory" GridPane.columnIndex="2" GridPane.rowIndex="5" />
            
            <!-- サーバー証明書パスワード -->
            <Label text="サーバー証明書パスワード:" GridPane.rowIndex="6" />
            <TextField fx:id="serverCertPassword" text="changeit" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="3" />
            
            <!-- CA証明書パスワード -->
            <Label text="CA証明書パスワード:" GridPane.rowIndex="7" />
            <TextField fx:id="caCertPassword" text="capassword" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.columnSpan="3" />
         </children>
      </GridPane>
      
      <!-- ボタン領域 -->
      <HBox spacing="10.0" alignment="CENTER_RIGHT">
         <children>
            <Button text="作成" onAction="#create" />
            <Button text="閉じる" onAction="#close" />
         </children>
      </HBox>
   </children>
</VBox>

