    <!-- 手動実行用のプロファイル -->
    <profiles>
        <profile>
            <id>dev</id>
            <properties>
                <build.Implementation-Version>${project.version}-${maven.build.timestamp}</build.Implementation-Version>
            </properties>
        </profile>
        <profile>
            <id>extract-sources</id>
            <build>
                <defaultGoal>generate-sources</defaultGoal>
                <plugins>
                    <!-- ソース展開前に既存のsrc/libディレクトリを削除（バージョンアップ時の古いファイル残存を防ぐ） -->
                    <!-- デフォルトのclean動作（targetディレクトリの削除）を無効化 -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-clean-plugin</artifactId>
                        <executions>
                            <!-- デフォルトのclean実行を無効化（targetディレクトリを削除しない） -->
                            <execution>
                                <id>default-clean</id>
                                <phase>none</phase>
                            </execution>
                            <!-- src/libディレクトリのみを削除 -->
                            <execution>
                                <id>clean-lib-sources</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>clean</goal>
                                </goals>
                                <configuration>
                                    <excludeDefaultDirectories>true</excludeDefaultDirectories>
                                    <filesets>
                                        <fileset>
                                            <directory>${project.basedir}/src/lib</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <followSymlinks>false</followSymlinks>
                                        </fileset>
                                    </filesets>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- 依存ライブラリのソースを展開 -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>extract-sources</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>unpack-dependencies</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.basedir}/src/lib</outputDirectory>
                                    <classifier>sources</classifier>
                                    <!-- compileスコープを指定してprovided依存関係も含める -->
                                    <!-- <includeScope>compile</includeScope> -->
                                    <excludeTransitive>false</excludeTransitive>
                                    <stripVersion>true</stripVersion>
                                    <stripClassifier>true</stripClassifier>
                                    <!-- 
                                        不要なライブラリのソースを除外:
                                        - org.openjfx: JavaFX (プラットフォーム固有のネイティブライブラリ)
                                        - org.controlsfx: ControlsFX (UIコンポーネントライブラリ)
                                        - org.projectlombok: Lombok (アノテーションプロセッサ)
                                        - org.junit.jupiter: JUnit (テストフレームワーク)
                                    -->
                                    <excludeGroupIds>org.openjfx,org.controlsfx,org.projectlombok,org.junit.jupiter</excludeGroupIds>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
