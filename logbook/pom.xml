<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>logbook-kai</groupId>
        <artifactId>logbook-kai</artifactId>
        <version>26.1.2</version>
    </parent>
    <artifactId>logbook</artifactId>
    <properties>
        <!-- os-maven-pluginで設定されるプロパティ（例）:
             os.detected.name: windows, linux, osx
             os.detected.arch: x86_64, aarch_64
             os.detected.classifier: windows-x86_64, linux-x86_64, osx-x86_64 など
        -->
        <!-- brotli4jの命名規則に合わせた分類子マッピング -->
        <brotli4j.os.name>${os.detected.name}</brotli4j.os.name>
        <brotli4j.os.arch>${os.detected.arch}</brotli4j.os.arch>
        <!-- brotli4jのartifact名は "native-{os}-{arch}" 形式 -->
        <!-- brotli4j.classifier>native-${brotli4j.os.name}-${brotli4j.os.arch}</brotli4j.classifier> -->
        <build.Implementation-Version>${project.version}</build.Implementation-Version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <encoding>UTF-8</encoding>
                    <annotationProcessorPaths>
                    	<path>
                    		<groupId>org.projectlombok</groupId>
                    		<artifactId>lombok</artifactId>
                    		<version>${lombok.version}</version>
                    	</path>
                    </annotationProcessorPaths>
                    <compilerArgument>-Xdiags:verbose</compilerArgument>
                    <verbose>true</verbose>
                    <proc>full</proc>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Bundle-License>The MIT License (MIT)</Bundle-License>
                            <Implementation-Title>航海日誌改</Implementation-Title>
                            <Implementation-Vendor>nomonomo</Implementation-Vendor>
                            <Built-By>nomonomo</Built-By>
                            <Implementation-Version>${build.Implementation-Version}</Implementation-Version>
                            <Build-Platform>${javafx.platform}</Build-Platform>
                        </manifestEntries>
                        <manifest>
                            <mainClass>logbook.internal.Launcher</mainClass>
                            <addBuildEnvironmentEntries>true</addBuildEnvironmentEntries>
                            <addExtensions>false</addExtensions>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <!-- システムクラスローダーを使用しない（モジュールシステムとの互換性のため） -->
                    <useSystemClassLoader>false</useSystemClassLoader>
                    <!-- モジュールパスを使用（Java 9以降） -->
                    <useModulePath>true</useModulePath>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <!-- 通常のビルドで実行される依存関係コピー -->
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                            <includeScope>runtime</includeScope>
                        </configuration>
                    </execution>
                    <!-- プラットフォーム固有のbrotli4jネイティブJARからネイティブライブラリを抽出 -->
                    <!-- すべてのプラットフォーム用のJARを展開（存在しないものはスキップ） -->
                    <execution>
                        <id>extract-brotli-native</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.aayushatharva.brotli4j</groupId>
                                    <artifactId>native-${brotli4j.classifier}</artifactId>
                                    <version>1.17.0</version>
                                    <type>jar</type>
                                    <outputDirectory>${project.build.directory}/native-libs</outputDirectory>
                                    <includes>lib/**</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.RegExpFileMapper>
                                            <pattern>^lib/[^/]+</pattern>
                                            <replacement>./</replacement>
                                        </org.codehaus.plexus.components.io.filemappers.RegExpFileMapper>
                                    </fileMappers>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
